<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_wish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/colorAccent2"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.client.zxing.google.com.wish.NewWish">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="NEW\nWISHLIST"
            android:textColor="@color/colorAccent4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:id="@+id/new_wish_list"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:src = "@drawable/red_plus_icon"
            android:id="@+id/plus"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:layout_height="30dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:src="@drawable/dot"
            android:id="@+id/imageView43" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:background="@color/colorAccent3"
            android:id="@+id/wish"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="65dp">

            <TextView
                android:text="  폴더"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textSize="13dp"
                android:id="@+id/folder"
                android:textStyle="bold"
                android:gravity="center"/>

            <ImageView
                android:layout_width="119dp"
                android:layout_marginLeft="30dp"
                android:layout_height="57dp"
                android:src="@drawable/buy_icon"
                android:layout_gravity="center_vertical"
                android:id="@+id/buy_icon"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            >

            <TextView
                android:text="  푸시알림"
                android:layout_width="130dp"
                android:gravity="center"
                android:layout_height="65dp"
                android:id="@+id/clock"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:text="On"
                android:layout_width="70dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/colorAccent4"
                android:layout_height="match_parent"
                android:textSize="13dp"
                android:id="@+id/on"
                />
            <TextView
                android:text="Off"
                android:layout_width="70dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:textSize="13dp"
                android:id="@+id/off"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="1">

            <TextView
                android:text="위치설정"
                android:layout_width="120dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="13dp"
                android:textStyle="bold"
                android:id="@+id/gps_setting"/>

            <TextView
                android:text="@string/to_map_setting"
                android:layout_width="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:textSize="13dp"
                android:textColor="@color/colorAccent4"
                android:id="@+id/to_map"/>

            <TextView
                android:text="@string/to_api_setting"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_height="match_parent"
                android:id="@+id/to_api"
                android:onClick="onClick"
                android:textSize="13dp"
                android:layout_alignStart="@+id/to_map"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>