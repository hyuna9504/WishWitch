<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="104dp">

            <ImageView
                android:layout_width="101dp"
                android:layout_height="18dp"
                android:src="@drawable/wish_wich_text"
                android:id="@+id/wish_wich_text"
                android:layout_marginBottom="498.8dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="80dp"/>

            <ImageView
                android:layout_width="69.3dp"
                android:layout_height="57dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20.5dp"
                android:layout_marginBottom="528.8dp"
                android:src="@drawable/logo"
                android:id="@+id/logo_image"
                />

        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:orientation="vertical"
            android:keepScreenOn="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="106dp"
                android:layout_height="116dp"
                android:src="@drawable/circle"
                android:id="@+id/imageView4"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="106.5dp"
                android:layout_height="126.8dp"
                android:id="@+id/user_image"
                android:layout_marginLeft="90.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="90.5dp"
                android:src="@drawable/user_img1"
                android:layout_alignBottom="@+id/imageView4"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/select_image1"
                android:layout_width="48.8dp"
                android:layout_height="57.5dp"
                android:layout_marginLeft="18.3dp"
                android:layout_gravity="bottom"
                android:src="@drawable/user_img2" />

            <ImageView
                android:id="@+id/select_image2"
                android:layout_width="59.5dp"
                android:layout_height="58.3dp"
                android:layout_marginLeft="11.5dp"
                android:layout_gravity="bottom"
                android:src="@drawable/user_img1" />

            <ImageView
                android:id="@+id/select_image3"
                android:layout_width="55.3dp"
                android:layout_height="55.5dp"
                android:layout_marginLeft="14.8dp"
                android:layout_gravity="bottom"
                android:src="@drawable/user_img3" />

            <ImageView
                android:id="@+id/select_image4"
                android:layout_width="56dp"
                android:layout_height="53.8dp"
                android:layout_marginLeft="11.5dp"
                android:layout_gravity="bottom"
                android:src="@drawable/user_img4" />

            <ImageView
                android:id="@+id/select_image5"
                android:layout_width="48dp"
                android:layout_height="66.3dp"
                android:layout_marginLeft="14.8dp"
                android:layout_marginRight="21.8dp"
                android:src="@drawable/user_img5" />
        </LinearLayout>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/enter_id"
            android:layout_gravity="center"
            android:hint="당신의 닉네임을 만들어 주세요"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="179.3dp"
            android:layout_height="35.5dp"
            android:id="@+id/start"
            android:src="@drawable/start_box"
            android:layout_marginTop="40.8dp"
            android:layout_marginLeft="85dp"
            android:layout_marginBottom="40.3dp"/>

    </LinearLayout>
</LinearLayout>
